        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"Apenom\": \"Runner QA\",\n  \"Correo\": \"runner{{$timestamp}}@test.com\"\n}"
        },
        "url": { "raw": "{{base_url}}/usuarios", "host": ["{{base_url}}"], "path": ["usuarios"] }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Crear Usuario 200/201\", ()=> pm.expect([200,201]).to.include(pm.response.code));",
              "const b = pm.response.json();",
              "pm.expect(b).to.have.property('UsuarioID');",
              "pm.environment.set('UsuarioID', b.UsuarioID);"
